<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="4.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.greatlarder.technicalassistant.controller.fragment_item.ItemRoom">
   <children>
      <HBox fx:id="hBoxRoom" alignment="CENTER" spacing="5.0">
         <children>
            <ImageView fx:id="imgRoom" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="labelNameRoom" text="Room" />
            <ImageView fx:id="imgChangeRoom" fitHeight="15.0" fitWidth="15.0" onMouseClicked="#openChangeNameRoom" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/change.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <HBox fx:id="hBoxChangeRoom" alignment="CENTER" spacing="4.0">
         <children>
            <TextField fx:id="tfNewNameRoom" />
            <Button fx:id="btnSave" mnemonicParsing="false" onMouseClicked="#saveNewNameRoom" text="Button" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</VBox>
